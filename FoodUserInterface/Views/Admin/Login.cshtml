@model FoodDatabase.fs_admin
@{
    ViewBag.Title = "Admin Login";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<style>
    .table span {
        color: red !important;
    }

    #container {
        margin-top: 100px;
    }

    .row img {
        width: 100%;
        border-radius: 20px;
    }

    table span {
        color: red;
    }

    table td {
        padding: 10px 0;
        padding-right: 60px;
    }

    input {
        border: 1px solid #cbc9c8;
        padding: 5px;
        border-radius: 10px;
    }

        input[type = "submit"], #newUserBtn {
            background-color: #FFD371;
            border: none;
            color: black;
        }

            input[type = "submit"]:hover, #newUserBtn:hover {
                background-color: #FFB740;
                color: black;
            }
</style>

<div>
    @using (Html.BeginForm(FormMethod.Post))
    {
        <div id="container">
            <h2>Admin Login</h2>
            <table>
            <tbody>
                <tr>
                    <td>@Html.LabelFor(model => model.a_username)</td>
                    <td>@Html.TextBoxFor(model => model.a_username)</td>
                    <td>
                        <span>@Html.ValidationMessageFor(model => model.a_username)</span>
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.a_password)</td>
                    <td>@Html.PasswordFor(model => model.a_password)</td>
                    <td>
                        <span>@Html.ValidationMessageFor(model => model.a_password)</span>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <input type="submit" class="btn btn-primary" value="Login" name="name" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
        
        <p style="color: red;">@ViewBag.error</p>
    }
</div>
