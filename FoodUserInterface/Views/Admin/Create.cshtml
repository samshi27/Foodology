@model FoodDatabase.fs_restaurant
@{
    ViewBag.Title = "Add Restaurant";
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $('#loginBtn').click(function () {
            document.location.href = "Signup";
        });
    });
</script>

<style>
    .create-wrapper {
        border: 1px solid #e3e3e3;
        margin: 100px 0;
        border-radius: 10px;
        width: 550px;
        padding: 50px;
        position: absolute;
        left: 50%;
        top: 50%;
        -webkit-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
    }

    table {
        width: 100%;
    }

        table span {
            color: red;
            margin: 10px 0;
        }

        table td {
            padding: 10px 0;
        }

    center {
        margin: 20px 10px;
        width: 100%;
    }

    .center-flex {
        width: 100%;
        display: flex;
    }

    input {
        border: 1px solid #cbc9c8;
        padding: 5px;
        border-radius: 5px;
    }

        input[type = "text"], input[type = "password"], input[type = "file"] {
            width: 100%;
            height: 50px;
        }

        input[type = "submit"], #newUserBtn {
            background-color: #FFD371;
            border: none;
            color: black;
            font-weight: 500;
        }

            input[type = "submit"]:hover, #newUserBtn:hover {
                background-color: #FFB740;
                color: black;
            }
</style>

<div class="create-wrapper">
    @using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <h2 style="text-align: left; margin-bottom: 30px;">Add Restaurant</h2>
        <table>
            <tbody>
                <tr>
                    <td>@Html.LabelFor(model => model.r_name)</td>
                    <td>@Html.EditorFor(model => model.r_name)</td>
                    <td>
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.r_name)</span>
                    </td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.r_location)</td>
                    <td>@Html.EditorFor(model => model.r_location)</td>
                    <td>
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.r_location)</span>
                    </td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.r_email)</td>
                    <td>@Html.EditorFor(model => model.r_email)</td>
                    <td>
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.r_email)</span>
                    </td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.r_contact)</td>
                    <td>@Html.EditorFor(model => model.r_contact)</td>
                    <td>
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.r_contact)</span>
                    </td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.r_image)</td>
                    <td>
                        <input type="file" value="" name="imgFile" id="imgFile" />
                    </td>
                    <td>
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.r_image)</span>
                    </td>
                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.r_password)</td>
                    <td>@Html.PasswordFor(model => model.r_password)</td>
                    <td>
                        <span class="text-danger">@Html.ValidationMessageFor(model => model.r_password)</span>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="center-flex">
            <center>
                <input style="height: 40px;width: 100%; border-radius: 20px;" type="submit" class="btn btn-primary" value="Submit" name="name" />
            </center>
        </div>
        <p style="color: red;">@ViewBag.Error</p>
    }
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
