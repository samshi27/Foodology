<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap" rel="stylesheet">
    <title>@ViewBag.Title</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Roboto Mono', monospace;
        }

        div {
            display: block;
        }

        .side-navigator {
            position: fixed;
            bottom: 0;
            width: 200px;
            height: 100vh;
            z-index: 9999;
            background-size: cover;
        }

        .first-level {
            overflow: hidden;
            border-right: 1px solid #d9d9d9;
            box-shadow: 0 0 16px -6px #000000;
            width: 200px;
            min-height: 100vh;
            background-color: white;
            position: fixed;
            z-index: 102;
            left: 0;
        }

        .side-body {
            margin-left: 200px;
        }

        .body-content {
            margin: 50px;
        }

        a {
            text-decoration: none;
            color: black;
        }

        .first-level {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .one p {
            font-size: 2.5em;
            font-weight: 700;
        }

        .section {
            border-bottom: 1px solid #d9d9d9;
        }

        .side-navigator p {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="side-navigator">
        <div class="first-level">
            <div>

            </div>
            <div class="section one">
                <p>Foodo.</p>
            </div>
            <hr />
            <div class="section two">
                <p>@Html.ActionLink("Home", "Home", "User")</p>
            </div>
            <div class="section three">
                <p>@Html.ActionLink("User", "Login", "User")<p>
            </div>
            <div class="section four">
                <p>@Html.ActionLink("Admin", "Login", "Admin")</p>
            </div>
            <div class="section five">
                <p>@Html.ActionLink("Restaurant", "Login", "Restaurant")</p>
            </div>
            <hr />
            <div class="section five">
                <p>&copy; @DateTime.Now.Year Foodo.</p>
            </div>
        </div>
    </div>
    <div class="side-body">
        <div class="body-content">
            @RenderBody()
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
