@using PagedList.Mvc
@model IEnumerable<FoodDatabase.fs_item>
@{
    ViewBag.Title = "Items";
}

<link href="~/Content/paginition.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<style>
    a {
        color: black;
        z-index: 1000;
    }

        a:hover {
            text-decoration: none;
            color: #FFB740;
        }

    html {
        overflow-x: hidden;
    }

    .category-list {
        width: 100%;
        margin: auto;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>

<div class="category-list">
    @foreach (var item in Model)
    {
        <div class="category-wrapper">
            <div class="col-lg-4 col-md-4 text-left" style="height : 200px; margin-top : 100px">
                <img src="@Url.Content(item.i_image)" style="height : 100%; width : auto; border-radius : 10px" />

                <h3>@Html.ActionLink(item.i_name, "ItemDetails", new { id = item.i_id })</h3>
            </div>
        </div>
    }
</div>
