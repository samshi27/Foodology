@model FoodDatabase.fs_item

@{
    ViewBag.Title = "ItemDetails";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<h2>Item Details</h2>
<style>
    input {
        border: 1px solid #cbc9c8;
        padding: 5px;
        border-radius: 5px;
    }

        input[type = "submit"]{
            background-color: #FFD371;
            border: none;
            color: black;
            font-weight: 500;
        }

            input[type = "submit"]:hover{
                background-color: #FFB740;
                color: black;
            }
</style>

@using (Html.BeginForm(FormMethod.Post))
{ 
    <div>
        <input type="hidden" name="id" value="@Model.i_id" />
        <dl class="dl-horizontal">
            <dt>
                Image
            </dt>
            <dd>
                <img src="@Url.Content(Model.i_image)" style="height: 200px; border-radius: 20px;"/>
            </dd>
            
            <dt>
                @Html.DisplayNameFor(model => model.i_name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.i_name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.i_price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.i_price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.i_desc)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.i_desc)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.fs_category.c_name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.fs_category.c_name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.fs_restaurant.r_name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.fs_restaurant.r_name)
            </dd>
        </dl>
        <div>
            <input id="qtyBtn" style="height: 40px;width: 150px; border-radius: 20px;" type="number" name = "qty" placeholder="Qty" min="1" max="10" value="Add to Cart" />
            <input id="cartBtn" style="height: 40px;width: 150px; border-radius: 20px;" type="submit" name="AddToCart" value="Add to Cart" />
        </div>
    </div>
}
    




