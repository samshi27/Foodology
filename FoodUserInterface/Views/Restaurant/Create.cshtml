@model FoodDatabase.fs_category
@{
    ViewBag.Title = "Add Category";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $('#addItemBtn').click(function () {
            document.location.href = "CreateItem";
        });
    });
</script>

<style>
    .table span {
        color: red !important;
    }

    #container {
        margin-top: 100px;
    }

    .row img {
        width: 100%;
        border-radius: 20px;
    }

    table span {
        color: red;
    }

    table td {
        padding: 10px 0;
        padding-right: 60px;
    }

    input {
        border: 1px solid #cbc9c8;
        padding: 5px;
        border-radius: 10px;
    }

        input[type = "submit"], input[type = "button"], #newUserBtn {
            background-color: #FFD371;
            border: none;
            color: black;
        }

            input[type = "submit"]:hover, input[type = "button"]:hover, #newUserBtn:hover {
                background-color: #FFB740;
                color: black;
            }
</style>

<div>
    <h2>Session: @Session["r_id"].ToString()</h2>
    @using (Html.BeginForm("Create", "Restaurant", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div id="container">
            <h2>Add Category</h2>
            <table>
                <tbody>
                    <tr>
                        <td>@Html.LabelFor(model => model.c_name)</td>
                        <td>@Html.EditorFor(model => model.c_name)</td>
                        <td>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.c_name)</span>
                        </td>
                    </tr>

                    <tr>
                        <td>@Html.LabelFor(model => model.c_image)</td>
                        <td>
                            <input type="file" value="" name="imgFile" id="imgFile" />
                        </td>
                        <td>
                            <span class="text-danger">@Html.ValidationMessageFor(model => model.c_image)</span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <input type="submit" class="btn btn-primary" value="Create" name="name" />
                        </td>
                        
                        <td>
                            <input type="button" id ="addItemBtn" class="btn btn-primary" value="Add Item" name="name" />
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
        
        <p style="color: red;">@ViewBag.Error</p>
    }
</div>